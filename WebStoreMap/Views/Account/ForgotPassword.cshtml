@model WebStoreMap.Models.Email.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Забыли пароль?";
}

<div class="login-wrap" style="min-height:515px">
    <div class="login-html" style="text-align:center">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab" style="margin-right: 0; margin: 0 0px 10px 0;">ВОССТАНОВЛЕНИЕ ПАРОЛЯ</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab" style="display:none"></label>
        <div class="login-form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="sign-in-htm">
                    <div class="group">
                        <label for="pass" class="label">Почта</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input", placeholder = "Почта" } })
                    </div>
                    <div class="group">
                        <img src='@Url.Action("Captcha", "Account")' alt='captcha' style=" display: block; margin: 0 auto; " />
                    </div>
                    <div class="group" style="margin-bottom:30px;">
                        @Html.EditorFor(model => model.Captcha, new { htmlAttributes = new { @class = "input", placeholder = "Введите текст с картинки" } })
                    </div>

                    <div class="group">
                        <input type="submit" class="button" value="СБРОСИТЬ">
                    </div>
                    <div class="hr"></div>
                </div>
            }
