@model WebStoreMap.Models.Email.ResetPasswordViewModel

@{
    ViewData["Title"] = "Сброс пароля";
}

<div class="login-wrap" style="min-height:530px">
    <div class="login-html" style="text-align:center">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab" style="margin-right: 0; margin: 0 0px 10px 0;">ВОССТАНОВЛЕНИЕ ПАРОЛЯ</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab" style="display:none"></label>
        <div class="login-form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <div class="sign-in-htm">
                <div class="group">
                    <label for="pass" class="label">Почта</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input", placeholder = "Почта" } })
                </div>
                <div class="group">
                    <label for="pass" class="label">Пароль</label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input", placeholder = "Пароль" } })
                </div>
                <div class="group">
                    <label for="pass" class="label">Подтвержение пароля</label>
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "input", placeholder = "Подтверждение пароля" } })
                </div>
                <div class="group">
                    <input type="submit" class="button" value="ПОДТВЕРДИТЬ">
                </div>
                <div class="hr"></div>
            </div>
            }
        </div>
    </div>
</div>