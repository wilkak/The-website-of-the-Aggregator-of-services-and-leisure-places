
@{ ViewBag.Title = "Главное"; }


<style>
    .card {
        border: none;
        box-shadow: 3px 5px 35px rgb(86 68 169 / 10%);
        border-radius: 0;
    }

    .dashboard-section .col .card:hover {
        background: #f44153;
        color: white !important;
    }

    .dashboard-section .col .card .card-body {
        color: black;
    }

    .dashboard-section .col .card:hover .card-body .card-text {
        color: white !important;
    }

    .dashboard-section .col .card:hover .card-body .card-title {
        color: white !important;
    }
</style>

<section class="dashboard-section" style="margin-top:40px">
    <div class="row row-cols-1 row-cols-md-3 g-4" style="margin-right:0; margin-left:0">
        <div class="col">
            <div class="card h-100">
                <a href="/Manager/Place/Places?Length=0">
                    <div class="card-body">
                        <h5 class="card-title">Места досуга</h5>
                        <p class="card-text">Добавьте новое место досуга или отредактируйте уже созданные</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <a href="/Manager/Company/Companies?Length=0">
                    <div class="card-body">
                        <h5 class="card-title">Компании</h5>
                        <p class="card-text">Добавьте компанию или отредактируйте уже созданные</p>
                    </div>
                </a>
            </div>
        </div>
       
        <div class="col">
            <div class="card h-100">
                <a href="/Manager/Email?Length=0">
                    <div class="card-body">
                        <h5 class="card-title">Почта</h5>
                        <p class="card-text">Напишите письмо</p>
                    </div>
                </a>
            </div>
        </div>
 
        <div class="col">
            <div class="card h-100">
                <a href="/">
                    <div class="card-body">
                        <h5 class="card-title">Выход</h5>
                        <p class="card-text">Выйдите из меню менеджера и вернитесь в область для всех пользователей</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>