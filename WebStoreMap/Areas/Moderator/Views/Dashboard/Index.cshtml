
@{ ViewBag.Title = "Главное"; }


<style>
    .card {
        border: none;
        box-shadow: 3px 5px 35px rgb(86 68 169 / 10%);
        border-radius: 0;
    }

    .dashboard-section .col .card:hover {
        background: #f44153;
        color: white !important;
    }

    .dashboard-section .col .card .card-body {
        color: black;
    }

    .dashboard-section .col .card:hover .card-body .card-text {
        color: white !important;
    }

    .dashboard-section .col .card:hover .card-body .card-title {
        color: white !important;
    }
</style>

<section class="dashboard-section" style="margin-top:40px">
    <div class="row row-cols-1 row-cols-md-3 g-4" style="margin-right:0; margin-left:0">
        <div class="col">
            <div class="card h-100">
                <a href="/moderator/Rating/Ratings?Length=0">
                    <div class="card-body">
                        <h5 class="card-title">Отзывы</h5>
                        <p class="card-text">Удалите отзывы неподобающего содержания</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <a href="/moderator/Comment/Comments?Length=0">
                    <div class="card-body">
                        <h5 class="card-title">Комментарии</h5>
                        <p class="card-text">Удалите комментарии неподобающего содержания</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <a href="/moderator/Comment/Replies?Length=0">
                    <div class="card-body">
                        <h5 class="card-title">Ответы к комментариям</h5>
                        <p class="card-text">Удалите ответы к комментариям неподобающего содержания</p>
                    </div>
                </a>
            </div>
        </div>
        
        <div class="col">
            <div class="card h-100">
                <a href="/">
                    <div class="card-body">
                        <h5 class="card-title">Выход</h5>
                        <p class="card-text">Выйдите из меню модератора в область для всех пользователей</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>