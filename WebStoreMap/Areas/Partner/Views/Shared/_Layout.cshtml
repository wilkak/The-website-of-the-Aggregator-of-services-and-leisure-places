@using System.Web;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Партнерская область</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Roboto:wght@900&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a0728c37d3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" type="text/css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Content/css/message-page.css" type="text/css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Content/css/admin-partner-zone.css" type="text/css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Content/css/error-page.css" type="text/css" asp-append-version="true" />
</head>
<body>
    <style>
        .navbar-style {
            background: #f44153;
            font-family: 'Montserrat', sans-serif;
        }

        .navbar-nav .nav-item .nav-link:hover {
            color: #fff;
        }

        .navbar-nav .nav-item .nav-link:hover {
            color: #D0D0D0;
        }

        .listing-item .listing-item-link:before {
            display: none;
        }

        .navbar-text {
            padding-top: var(--bs-navbar-brand-padding-y);
            padding-bottom: var(--bs-navbar-brand-padding-y);
            margin-right: var(--bs-navbar-brand-margin-end);
            font-size: var(--bs-navbar-brand-font-size);
            color: var(--bs-navbar-brand-color);
            text-decoration: none;
            white-space: nowrap;
        }

        .nav-item a {
            font-family: 'Montserrat', sans-serif !important;
        }
    </style>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-style" id="navbarMobile">
        <div class="navbar-container">
            <div class="btn-open-offcanvas">
                <button class="navbar-toggler" type="button" style="border: none !important; box-shadow: none !important;" ype="button" data-bs-toggle="offcanvas" href="#offcanvasScrolling" role="button" aria-controls="offcanvasScrolling">
                    <span style=" width: 1.5em; height: 1.5em;" class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="logo-div">
                <a class="navbar-brand" style="padding-right: 20px;" href="#">STREET TRAVEL</a>
            </div>
            <div class="dropdown dropdown-mobile" id="dropdown-mobile">
                <a class="dropdown-link" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-regular fa-user" style="font-size: 19px; margin-top: 3px;"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                    <li>
                        <a class="dropdown-item" href="/Account/UserProfileInfo">
                            Профиль
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="/">
                            Выход
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>

    <nav class="navbar navbar-expand-lg navbar-dark navbar-style" id="navbarDesktop">
        <div class="container-fluid">
            <a class="navbar-brand" href="/partner/Dashboard">STREET TRAVEL</a>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/partner/Dashboard">Главная</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Места досуга", "Places", "Place", "", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Компания", "Companies", "Company", "", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="padding-top: 22px; padding-left:20px; padding-right:20px">
                            <i class="fa-regular fa-user" style="font-size:19px"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                            <li>
                                <a class="dropdown-item" href="/Account/UserProfileInfo">
                                    Профиль
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/">
                                    Выход
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasExampleLabel" style="max-width: 70%; background: #333; ">
        <div class="offcanvas-header" style=" padding-top: 20px; padding-bottom: 20px; padding-left: 10px; padding-right: 10px;">
            <h2 class="offcanvas-title" id="offcanvasExampleLabel">Меню</h2>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close" style="background:none;">
                <span style=" width: 1.8em; height: 1.8em;" class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="offcanvas-body" style="padding:0;">
            <div>
                <ul class="navbar-nav navbar-nav-mobile me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/partner/Dashboard">Главная</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Места досуга", "Places", "Place", "", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Компания", "Companies", "Company", "", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/UserProfileInfo">Профиль</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <section style="margin-top: 40px;" class="section-main-admin-partner">
        @RenderBody()
    </section>


    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-3.6.1.slim.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)


    <script>
        var clickDropdownMobile = 0;
        $("#dropdown-mobile").click(function () {
            if (clickDropdownMobile % 2 == 0) {
                $(this).addClass("active");
            }
            else {
                $(this).removeClass("active");
            }
            clickDropdownMobile++;
        });
    </script>

</body>

</html>